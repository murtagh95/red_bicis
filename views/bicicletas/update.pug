extends ../layout

block content
    a.btn-info(href='/bicicletas') Volver

    br
    br
    br

    h1 Nueva Bicicleta

    br
    br

    form(action=`/bicicletas/${bici.id}/update` method="post")
        label(for='id') ID:
        input(type="text" name='id' value=bici.id autofocus)
        
        br
        
        label(for='color') Color:
        input(type="text" name='color' value=bici.color)
        
        br
        
        label(for='modelo') Modelo:
        input(type="text" name='modelo' value=bici.modelo)
        
        br
        
        label(for='lat') Latitud:
        input(type="text" name='lat' value=bici.ubicacion[0])
        
        br
        
        label(for='log') Longitud:
        input(type="text" name='log' value=bici.ubicacion[1])
        
        br
        br

        input.btn-success(type="submit", value="OK")
        


